            <kind>1</kind>
            <string>/// Draw informative text

// Find the mid point of the view
var mid_x = view_xview[0] + (view_wview[0] / 2);
var mid_y = view_yview[0] + (view_hview[0] / 2);

// Always draw tank controls in the bottom half of the view
draw_set_font(fnt_score);
draw_set_halign(fa_center);
draw_text_outlined_ext(mid_x, mid_y + 6, "Movement Controls:", 4, string_width("Movement Controls:"), c_black, 1);

var low_x = view_wview[0] / 4;
var low_y = mid_y + (view_hview[0] / 4);

draw_set_color(c_white);
draw_set_font(fnt_help);

var next_x = low_x;
var next_y = low_y - 25;

var tank_controls = obj_tank_controller.tank_controls;
var controls_title = ds_list_create();
var control_string = "";
ds_list_add(controls_title, "Left Tank:", "Right Tank:");

for(var interval = 0; interval &lt; 2; interval++)
{
    draw_text_outlined_ext(next_x, next_y, controls_title[| interval], 4, string_width(controls_title[| interval]), c_black, 1);
    
    // Cycle through controls for tanks
    var cur_tank = obj_tank_controller.tanks[| interval];
    var cur_control_set = tank_controls[| interval];
    var cur_control = ds_map_find_first(cur_control_set);

    do
    {
        next_y += 16;
        control_string = cur_control + ": " + get_key_common_name(cur_control_set[? cur_control]);
        draw_text_outlined_ext(next_x, next_y, control_string, 4, string_width(control_string), c_black, 1);
        
        cur_control = ds_map_find_next(cur_control_set, cur_control);
    }
    until(is_undefined(cur_control))
    next_x *= 3;
    next_y = low_y - 25;
}

// Draw variable info text in the top half of the view

var high_x = mid_x;
var high_y = mid_y - (view_hview[0] / 4);
var higher_y = view_yview[0] + (view_hview[0] / 4) - 32;

draw_sprite(cur_sprite, 0, high_x, higher_y);
draw_text_outlined_ext(high_x, high_y, cur_text, string_height(cur_text) + 2, view_wview[0] - 4, c_black, 1);
